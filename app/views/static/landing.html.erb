<div class="row">
  <container class="col-md-8 col-md-offset-2">
    <div class="btn-group btn-group-justified">
      <% @provinces.each do |p| %>
        <div class="btn-group">
          <button type="button" class="btn btn-default province" data=<%= p %> >
            <%= p %>
          </button>
        </div>
      <% end %>
    </div>
  </container>
</div>



<div class="row">
  <container class="col-md-8 col-md-offset-2">
    <div class="btn-group btn-group-justified">
      <% @states.each do |s| %>
        <div class="btn-group">
          <button type="button" class="btn btn-default state" data=<%= s %> >
            <%= s %>
          </button>
        </div>
      <% end %>
    </div>
  </container>
</div>


<div class="col-md-8 col-md-offset-2">
  <div id="crossings" class="list-group">

  </div>
</div>

<div class="row-fluid" id="chart-container"style="display: none;">
  <div class="col-md-6 col-md-offset-3" >

    <h2 style="text-align:center" id="chart-title"></h2>
    <h4 style="text-align:center" id="bound"> USA -> Canada </h4>
    <div class="rotate pull-left">Delay (minutes)</div> 
    <canvas class ="chart" id ="chart"> </canvas>
    <p style="text-align:center">Time</p>
    <div class="btn-group btn-justified">
      <% (0..6).each do |index| %>
        <% if index == Time.now.wday %>
          <button value=<%=index%> type="button" class="day_select btn btn-default active"><%= weekday(index) %></button>
        <% else %>
          <button value=<%=index%> type="button" class="day_select btn btn-default"><%= weekday(index) %></button>
        <% end %> 

      <% end %> 
    </div>
  </div>
  <div>
    <div class="col-md-3">
      <div class="btn-group">
        <button id = 'bound_button' type="button" class="btn btn-primary">
        </button>
      </div>
    </div>
  </div>
</div>