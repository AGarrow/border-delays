<div class="row-fluid">
  <div class="col-md-8 col-md-offset-1">
    <h2>Find Your Border Crossing</h2>

    <div class="row">      
      <div class="col-md-10 col-md-offset-1">
        <div class="btn-group btn-group-justified">
          <% @provinces.each do |p| %>
            <div class="btn-group">
                <button id = "<%= p %>" type="button" class="btn btn-default border-button province-button"> <%= p %>
                </button>
            </div>
          <% end %> 
        </div>
      </div>
    </div>

    <div class="row">      
      <div class="col-md-10 col-md-offset-1">
        <div class="btn-group btn-group-justified">
          <% @states.each do |s| %>
            <div class="btn-group">
                <button id = "<%= s %>" type="button" class="btn btn-default border-button state-button"> <%= s %>
                </button>
            </div>
          <% end %> 
        </div>
      </div>
    </div>
  
  </div> 
</div>

