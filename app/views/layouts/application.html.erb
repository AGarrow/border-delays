<!DOCTYPE html>
<html>
<head>
  <title>BorderTimes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <%= link_to "Border Times", root_path, :class => "brand" %>
      <ul class = "nav">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <b class="caret"></b>
              Crossings
            </a>
            <ul class="dropdown-menu" >
              <% Crossing.all.each do |crossing| %>
                <li><%= link_to crossing.title, crossing_path(crossing.id) %></li>
              <%end%>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  </div>
<%= yield %>

</body>
</html>
