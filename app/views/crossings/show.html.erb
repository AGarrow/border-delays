<h2>Average Wait Times for <%= @crossing.title %> </h2>
<h4 id="title" data-id= <%= @crossing.id %> > <%= @crossing.location %> </h4>
</br>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10"> 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Canada Bound</h3>
      </div>
      <div class=" panel-body">
        <div class="col-md-6">
          <h4 style="text-align:center"> Private </h4>
          <div class="rotate pull-left">Delay (minutes)</div> 
          <canvas class ="chart" id ="canada_bound_private"> </canvas>
          <p style="text-align:center">Time<p>
        </div>
        <div class="col-md-6">
          <h4 style="text-align:center"> Commercial </h4>
          <div class="rotate pull-left">Delay (minutes)</div> 
          <canvas class ="chart" id ="canada_bound_commercial"> </canvas>
          <p style="text-align:center">Time<p>
        </div>
        <div class="row">
          <div class="average col-md-3">
            <div class="average-color"></div>
            <p class="key-words">  = Average </p>
            <!-- </br> -->
            <div class="recent-color"></div>
            <p class="key-words" id="canada-legend-recent">  = Today </p>
          </div>
          <div class="col-md-8 ">
            <div class="btn-group btn-justified">
              <% (0..6).each do |index| %>
                <button value=<%=index%> type="button" class="day_select_canada btn btn-default"><%= weekday(index) %></button>
              <% end %> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
